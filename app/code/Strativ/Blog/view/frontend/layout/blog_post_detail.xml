<?xml version="1.0"?>
<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block name="blog.post.detail" template="Strativ_Blog::post/detail.phtml">
                <arguments>
                    <argument name="post_vm" xsi:type="object">Strativ\Blog\ViewModel\Post</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="sidebar.main">
            <block name="blog.post.sidebar" template="Strativ_Blog::post/sidebar.phtml"/>
        </referenceContainer>

        <referenceBlock name="wishlist_sidebar" template="Strativ_Blog::wishlist/sidebar.phtml" />
    </body>
</page>
